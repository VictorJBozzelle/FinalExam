@model Vehicle

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="VehicleId" />
        <div class="form-group">
            <label asp-for="Year"></label>
            <div><span asp-validation-for="Year" class="text-danger"></span></div>
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Make"></label>
            <div><span asp-validation-for="Make" class="text-danger"></span></div>
            <input asp-for="Make" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Model"></label>
            <div><span asp-validation-for="Model" class="text-danger"></span></div>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Mileage"></label>
            <input asp-for="Mileage" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>